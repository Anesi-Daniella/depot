<%# <h1>Store#index</h1> %>
<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<ul class="catalog">
<%# sets a loop over the list products and displays each product in turn %>
  <% @products.each do |product| %>
    <li>
      <%= image_tag(product.image_url) %>
      <h2><%= product.title %></h2>
      <p><%= sanitize product.description %></p>
      <div class="price"><%= number_to_currency(product.price :unit => "$", :separator => ".", :delimiter => ",")   %> 
      <%= button_to 'Add to Cart', line_items_path(product_id: product) %></div>
    </li>
  <% end %>
</ul>
